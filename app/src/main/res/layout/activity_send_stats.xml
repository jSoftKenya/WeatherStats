<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:hint="Server IP"


            android:id="@+id/txtIp" />

    <EditText
        android:layout_width="wrap_content"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:hint="e.g. myserver.com or 192.168.10.56 "
        android:layout_marginTop="5dp"
        android:onClick="insert"
        android:id="@+id/editTextIp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location e.g Chuka"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/ic_location"
        android:inputType="textAutoComplete"
        android:id="@+id/editTextLocation"
        android:background="@drawable/rounded_edittext"
        style="@style/btnStyleEditText"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="Temperature (Deg. C)"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:drawableLeft="@mipmap/ic_temp"
        android:id="@+id/editTextTemp"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edittext"
        style="@style/btnStyleEditText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_humidity"
        android:hint="Humidity"
        android:inputType="numberDecimal"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:id="@+id/editTextHumidity"
        android:background="@drawable/rounded_edittext"
        style="@style/btnStyleEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rainfall"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:drawableLeft="@mipmap/ic_rainfall"
        android:inputType="numberDecimal"
        android:id="@+id/editTextRain"
        android:background="@drawable/rounded_edittext"
        style="@style/btnStyleEditText"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Record Data"
        android:onClick="insert"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_btn_shakespeare"
        style="@style/btnStyleShakespeare"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResult" />
</LinearLayout>

    </ScrollView>